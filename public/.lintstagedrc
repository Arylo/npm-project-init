{
  "linters": {
    "{lib,public,scripts,test}/**/*.ts": [
      "npm run lint:typescript -- --fix",
      "prettier --write --tab-width 4",
      "git add"
    ],
    "{lib,public,scripts,test}/**/*.js": [
      "npm run lint:javascript -- --fix",
      "prettier --write --tab-width 4",
      "git add"
    ],
    "{,public/}*.{json,yaml,yml}": [
      "prettier --write --tab-width 2",
      "git add"
    ],
    "{,public/}.editorconfig": [
      "prettier --write --tab-width 2 --parser yaml",
      "git add"
    ],
    "{,public/}.lintstagedrc": [
      "prettier --write --tab-width 2 --parser json",
      "git add"
    ]
  },
  "globOptions": {
    "dot": true
  }
}
